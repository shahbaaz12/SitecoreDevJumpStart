<configuration xmlns:patch="http://www.sitecore.net/xmlconfig">
  <sitecore>
    <unicorn>
      <configurations>
        <configuration name ="SitecorePlay.Common"
                       description="Container for common elements between the helix arch and the basic arch"
                       dependencies="Foundation.Serialization,Foundation.MultiTenant"
                       patch:after="configuration[@name='Foundation.MultiTenant']" >
          <targetDataStore physicalRootPath="D:\VS-Projects\SitecorePlay\Common\serialization" type="Rainbow.Storage.SerializationFileSystemDataStore,Rainbow" useDataCache="false" singleInstance="true"/>
          <predicate type="Unicorn.Predicates.SerializationPresetPredicate, Unicorn" singleInstance="true">
            <!--content-->
            <include name="Project.ScHelix.Content" database="master" path="/sitecore/content/Helix Arc"/>
            <include name="Project.ScHelix.Content" database="master" path="/sitecore/content/Basic"/>
            <!--templates-->
            <include name="Project.ScHelix.Templates" database="master" path="/sitecore/templates/Common"/>
            <!--layouts-->
            <include name="Project.ScHelix.Layouts" database="master" path="/sitecore/layout/Layouts/Common"/>
            <!--renderings-->
            <include name="Project.ScHelix.Layouts" database="master" path="/sitecore/layout/Renderings/Common"/>
            <!--placeholderSettings-->
            <include name="Project.ScHelix.Layouts" database="master" path="/sitecore/layout/Placeholder Settings/Common"/>
          </predicate>
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>